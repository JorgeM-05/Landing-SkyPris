    },
];

const services: Service[] = [
    // {
    //     title: "Desarrollo Web",
    //     description: "Creamos sitios web rÃ¡pidos y optimizados.",   
    //     icon: "/assets/Services/Chatbot.svg",
    // },
    {
        title: "Chatbots",
        description: "Automatizamos la atenciÃ³n con inteligencia artificial.",
        icon: "/assets/Services/Chatbot.svg",
    },
    {
        title: "E-commerce",
