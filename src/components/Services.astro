const benefits = [
    {
        title: "Chatbots AI",
        description:
            "Automatiza la atenciÃ³n al cliente con inteligencia artificial.",
        image: "/assets/Services/bot.svg",
    },
    {
        title: "E-commerce",
        description:
            "Tiendas online eficientes y seguras con integraciÃ³n de pagos.",
