---
import categoriesData from "../../public/data/categories.json"; // ðŸ”¹ Importar el JSON directamente en Astro
let selectedCategory = "Chatbots"; // ðŸ”¹ CategorÃ­a inicial
---

<section id="plans">
    <h2>Nuestros Planes</h2>

    <!-- ðŸ”¹ Botones para cambiar de categorÃ­a -->
    <div class="plans-category-buttons">
        {
            Object.keys(categoriesData).map((category) => (
                <button
                    class={`category-btn ${selectedCategory === category ? "active" : ""}`}
                    data-category={category}
                >
                    {category}
                </button>
            ))
        }
    </div>

    <!-- ðŸ”¹ Contenedor de los planes, generados desde Astro -->
    <div class="plans-container">
        {
            Object.entries(categoriesData).map(([category, plans]) => (
                <div
                    class={`plan-group ${selectedCategory === category ? "visible" : "hidden"}`}
                    data-category={category}
                >
                    {plans.map((plan) => (
                        <div
                            class={`plan-card ${plan.isBest ? "best-plan" : ""}`}
                        >
                            <img
                                src={plan.icon}
                                alt={plan.title}
                                class="plan-icon"
                            />
                            <h3>{plan.title}</h3>
                            <div class="plan-description">
                                {plan.description.map((line, index) => (
                                    <p>{line}</p>
                                ))}
                            </div>

                            <span class="category-btn plan-price">
                                {plan.price}
                            </span>
                        </div>
                    ))}
                </div>
            ))
        }
    </div>
</section>

<!-- âœ… Script Mejorado -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const buttons = document.querySelectorAll(".category-btn");
        const planGroups = document.querySelectorAll(".plan-group");

        let selectedCategory = "Chatbots"; // CategorÃ­a inicial

        buttons.forEach((button) => {
            button.addEventListener("click", () => {
                selectedCategory =
                    button.getAttribute("data-category") ?? "Chatbots";

                // ðŸ”¹ Quitar la clase "active" de todos los botones
                buttons.forEach((btn) => btn.classList.remove("active"));
                button.classList.add("active");

                // ðŸ”¹ Ocultar todos los grupos y mostrar solo el seleccionado
                planGroups.forEach((group) => {
                    if (
                        group.getAttribute("data-category") === selectedCategory
                    ) {
                        group.classList.remove("hidden");
                        group.classList.add("visible");
                    } else {
                        group.classList.remove("visible");
                        group.classList.add("hidden");
                    }
                });
            });
        });

        // ðŸ”¹ Mostrar la categorÃ­a inicial al cargar
        document
            .querySelector(`.plan-group[data-category="${selectedCategory}"]`)
            ?.classList.add("visible");
    });
</script>

